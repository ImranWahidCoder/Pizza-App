<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza app</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@400;700&family=Lato:ital,wght@1,400;1,700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>

    <div class="first">
        <nav class="container py-4 mx-auto flex items-center justify-between">
            <div>
                <table>
                    <tr>
                        <td><img src="/img/pizzalogo.jpg" alt="logo" height="60px" width="60px" draggable="false"
                                style="border-radius: 10px;"></td>
                        <td><span style="font-family: 'Balsamiq Sans', cursive;
                        font-family: 'Lato', sans-serif;font-size:60px;color: white;font-weight: bolder;">Pizza</span>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="navlink">
                <ul class="flex items-center">
                    <li class="ml-6"><a href="#">Menu</a></li>
                    <li class="ml-6"><a href="#">Offers</a></li>
                    <li class="ml-6"><a href="/register">Register</a></li>
                    <li class="ml-6"><a href="/login">Login</a></li>
                    <li class="ml-6"><a href="/cart"><img src="/img/cart2.png" alt="cart" height="60px" width="60px"
                                draggable="false" style="border-radius: 20px;"></a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="hero py-16">
            <div class="container mx-auto flex items-center justify-between">
                <div>
                    <h6 class="left">Are you feeling hungry?</h6>
                    <h1 class="main">Don't wait!</h1>
                    <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn_primary"><img
                            src="img/btnicon.webp" style="height: 30px;width: 30px; display: inline-block;">Order
                        Now</button>
                </div>
            </div>
        </section>
    </div>


    <section class="menu container max-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
        <div class="grid grid-cols-4 gap-x-20 gap-y-12 mx-2">
            <% pizzas.forEach((pizza)=>
                {%>
                <div class="w-64"
                    style="background: url('/img/cardback.jpg'); border-radius: 20px;box-shadow: 10px 10px 20px black;padding: 10px;">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image%>" alt="pizza"
                        style="border-radius: 20px;" draggable="false">
                    <div class="text-center">
                        <h2 class="mb-4 px-2 py-2 text-lg"
                            style="font-weight: bolder; border-radius: 10px; background-color: #282828; color: blanchedalmond;">
                            <%=pizza.name %></h2>
                        <span class="size py-1 px-4 rounded-full text-center"><%=pizza.size %></span>
                        <div class="flex items-center justify-around mt-10" style="padding-bottom: 10px;">
                            <span class="font-bold text-lg py-2 px-4"
                                style="font-size: 20px;background-color: #282828; color: rgb(255, 208, 0); border-radius: 10px;">â‚¹<%=pizza.price%></span>
                            <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart font-bold">
                                <span>+</span>
                                <span>Add</span>
                            </button>
                        </div>
                    </div>
                </div>
                <%})%>
        </div>
    </section>


    <script src="/js/app.js"></script>
</body>

</html>